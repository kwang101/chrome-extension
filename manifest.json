{
  "manifest_version": 2,

  "name": "FilmFinder",
  "description": "This extension gets data about movies and displays the current movies playing.",
  "version": "1.0",

  "icons": {"128": "src/images/fficon.png"},

  "background": {
    "persistent": false,
    "scripts": ["src/background/background.js"]
  },

  "browser_action": {
    "default_icon": "src/images/fficon.png",
    "default_popup": "popup.html",
    "default_title": "Get Started with FilmFinder!"
  },

  "options_page": "options.html",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
